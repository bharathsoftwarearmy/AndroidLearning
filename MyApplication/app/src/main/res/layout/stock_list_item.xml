<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/app_default_screen_margin"
    android:layout_marginBottom="@dimen/app_default_screen_margin"
    android:layout_marginLeft="@dimen/app_default_screen_margin"
    android:layout_marginRight="@dimen/app_default_screen_margin"
    android:background="@color/lightPrimaryColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_company_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_stock_exchange"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_stock_exchange"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_price_change"
            />
        <TextView
            android:id="@+id/percentageChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_percentage_change"
            />
    </LinearLayout>

</RelativeLayout>